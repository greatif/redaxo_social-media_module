					<?php
					$options = array(
						'6'=>'6 Bilder',
						'12'=>'12 Bilder',
						'18'=>'18 Bilder'
					);
							
					echo' <select name="REX_INPUT_VALUE[2]" id="floating" class="form-control">';
						foreach ($options as $k=>$v) : 
						echo' <option value="'.$k.'"';
						if ($k == "REX_VALUE[2]") {
							echo ' selected="selected"';
						}
						echo' >'.$v.'</option>';
						endforeach;
					echo' </select>';
					?>
					
